<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landscapebg"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="end"
        android:padding="10dp"
        android:text="0"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@id/gridLayoutNumbers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayoutNumbers"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="210dp"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toTopOf="@+id/btnEqual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDisplay">

        <!-- Row 1 -->
        <Button
            android:id="@+id/btn7"
            android:layout_margin="2dp"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn8"
            android:layout_margin="2dp"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn9"
            android:layout_margin="2dp"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/btn4"
            android:layout_margin="2dp"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn5"
            android:layout_margin="2dp"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn6"
            android:layout_margin="2dp"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/btn1"
            android:layout_margin="2dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn2"
            android:layout_margin="2dp"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn3"
            android:layout_margin="2dp"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/btn0"
            android:layout_columnSpan="1"
            android:layout_margin="2dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDot"
            android:layout_columnSpan="1"
            android:layout_margin="2dp"
            android:text="."
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnClear"
            android:layout_margin="2dp"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayoutOperations"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:columnCount="1"
        app:layout_constraintBottom_toTopOf="@+id/btnEqual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gridLayoutNumbers"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplay">

        <!-- Operations -->
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_margin="2dp" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_margin="2dp" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_margin="2dp" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_margin="2dp" />
    </GridLayout>

    <!-- Equal Button -->
    <Button
        android:id="@+id/btnEqual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
