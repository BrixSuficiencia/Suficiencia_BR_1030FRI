<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appwallpaper">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <!-- Title TextView -->
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="70dp"
            android:textColor="#1a0000"
            android:textAlignment="center"
            android:text="Profile"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium" />

        <!-- Name Display and Edit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:visibility="gone"
                android:maxLength="25" /> <!-- Limit name to 25 characters -->
        </LinearLayout>

        <!-- Gender Display and Edit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />
            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:visibility="gone">
                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Male" />
                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Female" />
            </RadioGroup>
        </LinearLayout>

        <!-- Interests Display and Edit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interests:"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/tv_interests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sports, Music"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />
            <LinearLayout
                android:id="@+id/ll_interests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">
                <CheckBox
                    android:id="@+id/cb_sports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Sports" />
                <CheckBox
                    android:id="@+id/cb_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Music" />
                <CheckBox
                    android:id="@+id/cb_travel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Travel" />
                <CheckBox
                    android:id="@+id/cb_anime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Anime" />
                <CheckBox
                    android:id="@+id/cb_video_games"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Video Games" />
                <CheckBox
                    android:id="@+id/cb_drawing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Drawing" />
            </LinearLayout>
        </LinearLayout>

        <!-- Edit Button -->
        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:backgroundTint="#dbcabd"
            android:textColor="#1a0000"
            android:padding="10dp"
            android:textSize="18sp" />

        <!-- Save and Cancel Buttons Side-by-Side -->
        <LinearLayout
            android:id="@+id/ll_save_cancel_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:visibility="gone"> <!-- Initially hidden, make visible when needed -->
            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:backgroundTint="#dbcabd"
                android:textColor="#1a0000"
                android:padding="10dp"
                android:textSize="18sp" />
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:backgroundTint="#dbcabd"
                android:textColor="#1a0000"
                android:padding="10dp"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
